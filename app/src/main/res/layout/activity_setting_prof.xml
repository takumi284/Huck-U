<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/backgroundColor"
    tools:context=".SettingProfActivity">

    <View
        android:id="@+id/backgroundView"
        android:layout_width="320dp"
        android:layout_height="48dp"
        android:background="@color/skyBlue"
        android:padding="100dp"
        app:layout_constraintBottom_toBottomOf="@+id/nameTitleView"
        app:layout_constraintEnd_toEndOf="@+id/editTextText"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/nameTitleView"
        app:layout_constraintTop_toTopOf="@+id/nameTitleView"
        app:layout_constraintVertical_bias="0.0" />

    <ImageView
        android:id="@+id/selectedImageView"
        android:layout_width="252dp"
        android:layout_height="272dp"
        android:layout_marginTop="204dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.503"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:srcCompat="@drawable/icon_sample" />

    <ImageButton
        android:id="@+id/selectImageButton"
        android:layout_width="55dp"
        android:layout_height="46dp"
        android:layout_marginTop="4dp"
        app:layout_constraintEnd_toStartOf="@+id/selectedImageView"
        app:layout_constraintTop_toTopOf="@+id/selectedImageView"
        app:srcCompat="@android:drawable/ic_menu_set_as" />

    <TextView
        android:id="@+id/nameTitleView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="36dp"
        android:layout_marginBottom="184dp"
        android:text="Name"
        android:textSize="34sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/selectedImageView" />

    <EditText
        android:id="@+id/editTextText"
        android:layout_width="194dp"
        android:layout_height="53dp"
        android:layout_marginStart="28dp"
        android:layout_marginTop="0dp"
        android:ems="10"
        android:inputType="text"
        android:textSize="30sp"
        app:layout_constraintStart_toEndOf="@+id/nameTitleView"
        app:layout_constraintTop_toTopOf="@+id/nameTitleView" />

    <ImageButton
        android:id="@+id/backButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginTop="16dp"
        android:background="@color/backgroundColor"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/back_button" />


</androidx.constraintlayout.widget.ConstraintLayout>